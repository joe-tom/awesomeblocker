{
  "manifest_version": 2,

  "name": "Awesome Blocker",
  "description": "This extension allows you to easily block all your distracting websites",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": ["background.js"],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ]
}

